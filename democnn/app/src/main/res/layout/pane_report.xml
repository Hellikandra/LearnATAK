<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/picList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:foregroundGravity="top"
        android:layout_marginBottom="16dp"
        android:background="#17F1F1F1"
        android:layout_weight="1" />

    <android.widget.ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <android.widget.LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.widget.TextView
                android:id="@+id/labelAnimalType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_animal_type"
                android:padding="4dp"/>

            <android.widget.EditText
                android:id="@+id/animalText"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="4dp"
                android:layout_marginStart="4dp"
                android:gravity="top"
                android:lines="2"
                android:hint="@string/hint_animal_type" />

            <android.widget.TextView
                android:id="@+id/labelLocationName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_location"
                android:padding="4dp"/>

            <android.widget.EditText
                android:id="@+id/locationText"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="4dp"
                android:layout_marginStart="4dp"
                android:gravity="top"
                android:lines="1"
                android:hint="@string/hint_location" />

            <android.widget.TextView
                android:id="@+id/labelExtraNotes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_note"
                android:padding="4dp"/>

            <android.widget.EditText
                android:id="@+id/noteText"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="4dp"
                android:layout_marginStart="4dp"
                android:gravity="top"
                android:lines="1"
                android:hint="@string/hint_note"/>

            <android.widget.TextView
                android:id="@+id/labelSetLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:gravity="center"
                android:text="@string/label_map_location_setter" />

            <Button
                android:id="@+id/submitReport"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="@string/submit"
                android:layout_gravity="center"/>

        </android.widget.LinearLayout>


    </android.widget.ScrollView>

</android.widget.LinearLayout>